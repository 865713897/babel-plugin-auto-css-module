{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "CommonJS",
    "target": "es6",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
  },
  "include": ["src", "client"]
}